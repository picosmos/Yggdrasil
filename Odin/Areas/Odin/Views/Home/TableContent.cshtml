@model TableDefinitionWithContent
@{
    ViewData["Title"] = "Table View: " + Model.Table.Name;
}
<h1>Table: @Model.Table.Name</h1>
<a asp-controller="Home" asp-action="AddOrEdit" asp-route-table="@Model.Table.Name">
    Add Entry
</a>

<table>
    <tr>
        @foreach (var column in Model.Table.Columns)
        {
            <th>@column.Name</th>
        }
        <th>Actions</th>
    </tr>
    @foreach (var row in Model.Entries)
    {
        <tr>
            @foreach (var column in Model.Table.Columns)
            {
                var content = row.Values[column.Name]?.ToString();
                if (!string.IsNullOrEmpty(content) && content.Length > 200)
                {
                    var truncated = content.Substring(0, 200);
                    var cellId = $"cell_{row.Id}_{column.Name}";
                    <td>
                        <span id="@cellId-short">@truncated...</span>
                        <span id="@cellId-full" style="display:none;">@content</span>
                        <button type="button"
                            onclick="document.getElementById('@cellId-short').style.display='none';document.getElementById('@cellId-full').style.display='inline';this.style.display='none';">Show
                            everything</button>
                    </td>
                }
                else
                {
                    <td>@content</td>
                }
            }
            <td>
                <a asp-action="AddOrEdit" asp-route-table="@Model.Table.Name" asp-route-id="@row.Id">Edit</a>&nbsp;
                <form asp-action="Delete" asp-route-table="@Model.Table.Name" asp-route-id="@row.Id" method="post"
                    style="display:inline;">
                    <button type="submit"
                        onclick="return confirm('Are you sure you want to delete this entry?');">Delete</button>
                </form>

            </td>
        </tr>
    }
</table>
